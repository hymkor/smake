(let*
  ((windows (equal (getenv "OS") "Windows_NT"))
   (EXE (if windows ".exe" "")))
  (make
    (and *args* (car *args*))
    ((cons "smake$(EXE)" (glob "*.go"))
     (sh "go fmt")
     (sh "go build")
     )
    ('("get")
     (sh "go get -u")
     (sh "go mod tidy")
     )
    ('("update")
     (touch "main.go")
     )
    ('("readme" "README.md")
     )
    ('("README.md" "_README.md" "Makefile.lsp")
       (sh "gmnlpp$(EXE) $< > \"$@\"")
     )
    ('("clean")
     (rm "smake$(EXE)~")
     )
  )
)
